{
  "compilerOptions": {
    "outDir": "./wwwroot/dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "strictFunctionTypes": true,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "removeComments": false,
    "sourceMap": true,
    "lib": [
      "es6",
      "dom"
    ],
    "target": "es5",
    "jsx": "preserve",
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true
  },
  "exclude": [
    "node_modules",
    "wwwroot"
  ],
  "include": [
    "src", "src/boot-client.tsx", "src/boot-server.tsx"
  ]
}
