{
    "compilerOptions": {
        "outDir": "./wwwroot/dist/",
        "noImplicitAny": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "strictFunctionTypes": true,
        "alwaysStrict": true,
        "noImplicitThis": true,
        "removeComments": false,
        "sourceMap": true,
        "lib": [ "es6", "dom" ],
        "target": "es5",
        "jsx": "react",
        "plugins": [
            {
                "name": "typescript-styled-plugin"
            }
        ]
    },
    "exclude": [
        "node_modules",
        "wwwroot"
    ]
}
